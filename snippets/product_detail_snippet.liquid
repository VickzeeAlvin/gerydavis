<div class="pdp_description product_snippet_wrapper">
  {% assign sub_title = product.metafields.airf.sub_title %}
  {% assign infotabdes = product.metafields.airf.infotabdes %}
  <div class="pro_label">{{product.title}}</div>

  {%comment%}
	  <div class="pro_sub_title">{{ sub_title }}</div>
  {%endcomment%}
  
  <div class="pro_des">{{product.description}}</div>

  {% assign scope = product.metafields.airf %}
  {% assign pdpinfotab = scope.pdpinfotab %}
  {% if pdpinfotab and pdpinfotab != blank %}
    <div class="product_info_tabs">
      {% for row in pdpinfotab.rows %}
      <div class="product_parent product_info_tab">
        <div class="button_wrapper">
          <button type="button" class="label collapsible-trigger collapsible-trigger-btn collapsible-trigger-btn--borders collapsible--auto-height is-open" aria-controls="Product-description-{{section.id}}-{{forloop.index}}" aria-expanded="true">
            <span class="collapsible-trigger__layout">
              <h2 class="pro_heading">
                {% for row_field in row %}
                  {% if row_field.key contains "infotabhea" %}
                    {{ scope[row_field.key] }}
                  {% endif %}
                {% endfor %}
              </h2>
              <span class="collapsible-trigger__icon collapsible-trigger__icon--open" role="presentation">
                <svg class="icon_arrow_down" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="16" height="10" viewBox="0 0 16 10" fill="none"><rect x="16" width="9.75" height="16" transform="rotate(90 16 0)" fill="url(#arrow_bown_2)"/><defs><pattern id="arrow_bown_2" patternContentUnits="objectBoundingBox" width="1" height="1"><use xlink:href="#image0_1211:49" transform="scale(0.025641 0.015625)"/></pattern><image id="image0_1211:49" width="39" height="64" xlink:href="data:image/png;base64,"/></defs></svg>
              </span>
            </span>
          </button>
        </div>
        <div id="Product-description-{{section.id}}-{{forloop.index}}" class="collapsible-content collapsible-content--all is-open">
          <div class="collapsible-content__inner rte">
            <div class="product-text">
              <div class="pro_title">
                <span class="title_text">
                  {% for row_field in row %}
                  {% if row_field.key contains "pdpinfodes" %}
                  {{ scope[row_field.key] }}
                  {% endif %}
                  {% endfor %}
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  {% endif %}
  
  {% assign nedhlptext = product.metafields.airf.nedhlptext %}
  {% assign buygidtxt = product.metafields.airf.buygidtxt %}
  {% assign buyigidurl = product.metafields.airf.buyigidurl %}
  {% assign needhlpurl = product.metafields.airf.needhlpurl %}
  
  {%if nedhlptext != blank or  buygidtxt != blank%}
    <div class="helper_wrapper">
      <div class="help_parent">
        {% if nedhlptext and nedhlptext != '&nbsp' %}
        	<a href="{% if needhlpurl and needhlpurl != '&nbsp' %}{{ needhlpurl }}{%else%}#{% endif %}" class="help_Section">{{ nedhlptext }}</a>
        {% endif %}
        {% if buygidtxt and buygidtxt != '&nbsp' %}
          <a href="{% if buyigidurl and buyigidurl != '&nbsp' %}{{ buyigidurl }}{%else%}#{% endif %}" class="help_inventory">
            <img class="inventory_image" src="https://cdn.shopify.com/s/files/1/0507/0379/4347/files/gds-cart_1.png?v=1635340264">
            <div class="inventory_text">{{ buygidtxt }}</div>
          </a>
        {% endif %}
      </div>
    </div>
  {%endif%}
</div>